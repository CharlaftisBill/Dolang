{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Do",
  "scopeName": "source.dolang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#characters"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types_decl"
    },
    {
      "include": "#builtin_types"
    },
    {
      "include": "#type_positions"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": "#.*$",
          "name": "comment.line.number-sign.dolang"
        }
      ]
    },
    "strings": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.dolang",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.dolang"
        },
        {
          "name": "constant.numeric.dolang",
          "match": "%[\\+#- 0]*[\\d\\*]*(\\.[\\d\\*]+)?[a-zA-Z%]"
        }
      ]
    },
    "characters": {
      "match": "'[^']*'",
      "name": "string.quoted.single.dolang"
    },
    "keywords": {
      "match": "\\b(if|else|while|for|in|continue|break|match|catch|success|failure|on|do|of|import)\\b",
      "name": "keyword.control.dolang"
    },
    "types_decl": {
      "match": "\\b(type|union|enum|func|array|interface)\\b",
      "name": "storage.type.dolang"
    },
    "builtin_types": {
      "match": "\\b(int|uint|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|str|bool|char|byte|rune)\\b",
      "name": "entity.name.type.dolang"
    },
    "type_positions": {
      "patterns": [
        {
          "match": "(?<=\\b[a-zA-Z_][a-zA-Z0-9_]*\\s)\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*[:=])",
          "name": "entity.name.type.dolang"
        },
        {
          "match": "(?<=[\\(|,]\\s*[a-zA-Z_][a-zA-Z0-9_]*\\s)\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "name": "entity.name.type.dolang"
        },
        {
          "match": "(?<=\\)\\s*)\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*[:{])",
          "name": "entity.name.type.dolang"
        },
        {
          "match": "(?<=\\])\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b|(?<=\\[)\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=:)",
          "name": "entity.name.type.dolang"
        }
      ]
    },
    "booleans": {
      "match": "\\b(true|false)\\b",
      "name": "constant.language.boolean.dolang"
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b[0-9]+\\.[0-9]+\\b",
          "name": "constant.numeric.float.dolang"
        },
        {
          "match": "\\b[0-9]+\\b",
          "name": "constant.numeric.integer.dolang"
        }
      ]
    },
    "operators": {
      "match": "(==|!=|<=|>=|:=|<|>|&&|\\|\\||!|\\+|-|\\*|/|%|&|\\||\\^|<<|>>|=|\\+\\+|--|:|\\.)",
      "name": "keyword.operator.dolang"
    },
    "functions": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
      "name": "entity.name.function.dolang"
    },
    "identifiers": {
      "patterns": [
        {
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b",
          "name": "variable.other.constant.dolang"
        },
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "variable.other.dolang"
        }
      ]
    }
  }
}